{% extends 'base.html.twig' %}
{% block title %}{{ batchNumber }}{% endblock %}
{% block body %}
    {% for key, item in items %}
    <table style="
        border-right: solid 1px #ddd; width: 56in; height: 62in;
        {% if loop.first == false %}
                margin-top: 0.1in;
        {% endif %}
    ">
        <tbody>
        <tr>
            <td style="padding: 0.1in 0.1in 0.1in 4in;">
                <strong style="font-size: 300%;color:red;">{{ batchHeader }}</strong>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <strong  style="font-size: 200%;">{{ productSKU }}</strong>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <strong style="font-size: 300%;"> {{ creationDate|date('Y-m-d') }} </strong>
            </td>
            <td>
                <div style="font-size: 120%;">
                    <strong> Batch: </strong> {{ batchNumber }}
                    <br>
                    <strong> Order: </strong> {{ item.orderPo }}
                    <br>
                    <strong> Item: </strong> {{ item.itemId }}
                </div>
            </td>
            <td style="padding: 0.1in; text-align: right;">
                <strong style="font-size: 600%; color:black;">&#8681;{{ key }}</strong>
            </td>
            <td style="padding: 0.1in  4in 0.1in 0.1in; text-align: right;">
                <table>
                    <thead>
                        <tr>
                            <th>Batch</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><barcode code="{{ batchNumber }}" type="C39" size="1.2" height="0.8" text="1"></barcode></td>
                        </tr>
                        <tr>
                            <td style="text-align: center;">
                                <span>{{ batchNumber }}</span>
                                &nbsp;&nbsp;&nbsp;
                                <span>{{ batchNumber }}</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td style="padding-top: 0.1in; padding-bottom: 0.1in;" colspan="4" align="center">
                <img src="{{ item.imageUrl }}">
            </td>
        </tr>
        </tbody>
    </table>
    {% endfor %}
{% endblock %}