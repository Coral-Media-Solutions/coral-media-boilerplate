{% extends 'base.html.twig' %}
{% block title %}{{ batchNumber }}{% endblock %}
{% block body %}
    {% for key, item in items %}
    <table style="
        border-right: solid 1px #ddd; width: 56in; height: 66in;
        {% if loop.first == false %}
                margin-top: 1in;
        {% endif %}
    ">
        <tbody>
        <tr>
            <td style="padding: 0.2in;">
                <strong style="font-size: 300%;color:red;">{{ productSKU }}</strong>
                <br>
                <strong  style="font-size: 200%;">{{ productSKU }}</strong>
            </td>
            <td>
                <div style="font-size: 120%;">
                    <strong> Batch: </strong> {{ batchNumber }}
                    <br>
                    <strong> Order: </strong> {{ item.orderPo }}
                    <br>
                    <strong> Item: </strong> {{ item.itemId }}
                    <br>
                    <strong> Batch Date: </strong> {{ creationDate|date('Y-m-d H:m:s') }}
                </div>
            </td>
            <td style="padding: 0.2in; text-align: right;">
                <strong style="font-size: 600%; color:black;">{{ key }}</strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <strong style="font-size: 300%; color:black;">#{{ item.itemSerial }}</strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </td>
            <td style="padding: 0.2in; text-align: right;">
                <table>
                    <thead>
                        <tr>
                            <th>Batch</th>
                            <th>Order</th>
                            <th>Item</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><barcode code="{{ batchNumber }}" type="C39" size="1.2" height="0.8" text="1"></barcode></td>
                            <td><barcode code="{{ item.orderPo }}" type="C39" size="1.2" height="0.8" text="1"></barcode></td>
                            <td><barcode code="{{ item.itemId }}" type="C39" size="1.2" height="0.8" text="1"></barcode></td>
                        </tr>
                        <tr>
                            <td style="text-align: center;">{{ batchNumber }}</td>
                            <td style="text-align: center;">{{ item.orderPo }}</td>
                            <td style="text-align: center;">{{ item.itemId }}</td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td style="padding-top: 1in; padding-bottom: 1in;" colspan="4" align="center">
                <img src="{{ item.imageUrl }}">
            </td>
        </tr>
        <tr>
            <td style="padding: 0.2in;">
                <strong style="font-size: 300%;color:red;">{{ productSKU }}</strong>
                <br>
                <strong  style="font-size: 200%;">{{ productSKU }}</strong>
            </td>
            <td>
                <div style="font-size: 120%;">
                    <strong> Batch: </strong> {{ batchNumber }}
                    <br>
                    <strong> Order: </strong> {{ item.orderPo }}
                    <br>
                    <strong> Item: </strong> {{ item.itemId }}
                    <br>
                    <strong> Batch Date: </strong> {{ creationDate|date('Y-m-d H:m:s') }}
                </div>
            </td>
            <td style="padding: 0.2in; text-align: right;">
                <strong style="font-size: 600%; color:black;">{{ key }}</strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <strong style="font-size: 300%; color:black;">#{{ item.itemSerial }}</strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </td>
            <td style="padding: 0.2in; text-align: right;">
                <table>
                    <thead>
                    <tr>
                        <th>Batch</th>
                        <th>Order</th>
                        <th>Item</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td><barcode code="{{ batchNumber }}" type="C39" size="1.2" height="0.8" text="1"></barcode></td>
                        <td><barcode code="{{ item.orderPo }}" type="C39" size="1.2" height="0.8" text="1"></barcode></td>
                        <td><barcode code="{{ item.itemId }}" type="C39" size="1.2" height="0.8" text="1"></barcode></td>
                    </tr>
                    <tr>
                        <td style="text-align: center;">{{ batchNumber }}</td>
                        <td style="text-align: center;">{{ item.orderPo }}</td>
                        <td style="text-align: center;">{{ item.itemId }}</td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        </tbody>
    </table>
{#        {% if loop.last == false %}#}
{#            <pagebreak />#}
{#        {% endif %}#}
    {% endfor %}
{% endblock %}