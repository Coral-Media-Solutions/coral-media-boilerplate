{% extends 'base.html.twig' %}
{% block title %}{{ batchNumber }}{% endblock %}
{% block stylesheets %}{% endblock %}
{% block body %}
    {% for item in items %}
        <table style="width: 64in;
        {% if loop.first == false %}
                margin-top: 0.1in;
        {% endif %}
        ">
            <tbody>
            <tr>
        {% for key, sub in item %}
            <td>
                <table style="border-right: solid 1px #ddd; width: 32in; height: 42in;">
                    <tbody>
                    <tr>
                        <td style="padding: 0.1in 0.1in 0.1in 2in;">
                            <strong style="font-size: 250%;color:red;">{{ batchHeader }}</strong>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <strong  style="font-size: 150%;">{{ productSKU }}</strong>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <strong style="font-size: 250%;"> {{ creationDate|date('Y-m-d') }} </strong>
                        </td>
                        <td style="padding-left: 1in">
                            <div style="font-size: 120%;">
                                <strong> Batch: </strong> {{ batchNumber }}
                                <br>
                                <strong> Order: </strong> {{ sub.orderPo }}
                                <br>
                                <strong> Item: </strong> {{ sub.itemId }}
                            </div>
                        </td>
                        <td style="padding: 0.1in; text-align: right;">
                            <strong style="font-size: 600%; color:black;">&#8681;{{ key }}</strong>
                        </td>
                        <td style="padding: 0.1in  2in 0.1in 0.1in; text-align: right;">
                            <table>
                                <thead>
                                <tr>
                                    <th>Batch</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td><barcode code="{{ batchNumber }}" type="C39" size="1.2" height="0.8" text="1"></barcode></td>
                                </tr>
                                <tr>
                                    <td style="text-align: center;">
                                        <span>{{ batchNumber }}</span>
                                        &nbsp;&nbsp;&nbsp;
                                        <span>{{ batchNumber }}</span>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 1in; padding-bottom: 1in;" colspan="4" align="center">
                            {% if sub.imageUrl != 'placeholder' %}
                                <img src="{{ sub.imageUrl }}">
                            {% else %}
{#                                <img src="https://via.placeholder.com/3350x4350/fff.png">#}
                                <img src="{{ asset('uploads/images/blank/placeholder_30_40.png') }}">
{#                                <img src="{{ asset('printing/image/placeholder_30_40') }}">#}
                            {% endif %}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </td>
        {% endfor %}
            </tr>
            </tbody>
        </table>
    {% endfor %}
{% endblock %}