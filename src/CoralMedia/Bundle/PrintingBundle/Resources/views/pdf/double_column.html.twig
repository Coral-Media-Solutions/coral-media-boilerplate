{% extends 'base.html.twig' %}
{% block title %}{{ batchNumber }}{% endblock %}
{% block stylesheets %}{% endblock %}
{% block body %}
    {% for item in items %}
        <table>
            <tbody>
            <tr>
        {% for key, sub in item %}
            <td>
                <table style="border-right: solid 1px #ddd; width: 36in; height: 46in;">
                    <tbody>
                    <tr>
                        <td style="padding: 0.1in;">
                            <strong style="font-size: 300%;color:red;">{{ productSKU }}</strong>
                            <br>
                            <strong  style="font-size: 200%;">{{ productSKU }}</strong>
                        </td>
                        <td>
                            <div style="font-size: 120%;">
                                <strong> Batch: </strong> {{ batchNumber }}
                                <br>
                                <strong> Order: </strong> {{ sub.orderPo }}
                                <br>
                                <strong> Item: </strong> {{ sub.itemId }}
                                <br>
                                <strong> Batch Date: </strong> {{ creationDate|date('Y-m-d H:m:s') }}
                            </div>
                        </td>
                        <td style="padding: 0.1in; text-align: right;">
                            <strong style="font-size: 600%; color:black;">{{ key }}</strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <strong style="font-size: 300%; color:black;">#{{ sub.itemSerial }}</strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </td>
                        <td style="padding: 0.1in; text-align: right;">
                            <table>
                                <thead>
                                <tr>
                                    <th>Batch</th>
                                    <th>Order</th>
                                    <th>Item</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td><barcode code="{{ batchNumber }}" type="C39" size="1.2" height="0.8" text="1"></barcode></td>
                                    <td><barcode code="{{ sub.orderPo }}" type="C39" size="1.2" height="0.8" text="1"></barcode></td>
                                    <td><barcode code="{{ sub.itemId }}" type="C39" size="1.2" height="0.8" text="1"></barcode></td>
                                </tr>
                                <tr>
                                    <td style="text-align: center;">{{ batchNumber }}</td>
                                    <td style="text-align: center;">{{ sub.orderPo }}</td>
                                    <td style="text-align: center;">{{ sub.itemId }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4" align="center">
                            <img style="width: 30in" src="{{ sub.imageUrl }}">
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 0.1in;">
                            <strong style="font-size: 300%;color:red;">{{ productSKU }}</strong>
                            <br>
                            <strong  style="font-size: 200%;">{{ productSKU }}</strong>
                        </td>
                        <td>
                            <div style="font-size: 120%;">
                                <strong> Batch: </strong> {{ batchNumber }}
                                <br>
                                <strong> Order: </strong> {{ sub.orderPo }}
                                <br>
                                <strong> Item: </strong> {{ sub.itemId }}
                                <br>
                                <strong> Batch Date: </strong> {{ creationDate|date('Y-m-d H:m:s') }}
                            </div>
                        </td>
                        <td style="padding: 0.1in; text-align: right;">
                            <strong style="font-size: 600%; color:black;">{{ key }}</strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <strong style="font-size: 300%; color:black;">#{{ sub.itemSerial }}</strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </td>
                        <td style="padding: 0.1in; text-align: right;">
                            <table>
                                <thead>
                                <tr>
                                    <th>Batch</th>
                                    <th>Order</th>
                                    <th>Item</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td><barcode code="{{ batchNumber }}" type="C39" size="1.2" height="0.8" text="1"></barcode></td>
                                    <td><barcode code="{{ sub.orderPo }}" type="C39" size="1.2" height="0.8" text="1"></barcode></td>
                                    <td><barcode code="{{ sub.itemId }}" type="C39" size="1.2" height="0.8" text="1"></barcode></td>
                                </tr>
                                <tr>
                                    <td style="text-align: center;">{{ batchNumber }}</td>
                                    <td style="text-align: center;">{{ sub.orderPo }}</td>
                                    <td style="text-align: center;">{{ sub.itemId }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </td>
        {% endfor %}
            </tr>
            </tbody>
        </table>
        {% if loop.last == false %}
            <pagebreak />
        {% endif %}
    {% endfor %}
{% endblock %}